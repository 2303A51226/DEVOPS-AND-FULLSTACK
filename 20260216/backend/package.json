{
  "name": "personal-finance-tracker-backend",
  "version": "1.0.0",
  "description": "Backend API for Personal Finance Tracker with integration testing",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest --testPathPattern=integration --passWithNoTests --runInBand",
    "test:watch": "NODE_ENV=test jest --testPathPattern=integration --watch",
    "test:coverage": "NODE_ENV=test jest --testPathPattern=integration --coverage --coverageReporters=json --coverageDirectory=coverage",
    "test:ci": "NODE_ENV=test jest --testPathPattern=integration --ci --coverage --coverageReporters=json --coverageReporters=lcov --coverageReporters=text-summary --maxWorkers=2",
    "lint": "eslint src --fix"
  },
  "keywords": [
    "finance",
    "tracker",
    "api",
    "rest"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
